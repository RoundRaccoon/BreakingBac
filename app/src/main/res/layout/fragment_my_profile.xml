<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageView"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading"
            android:textColor="#000000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/profile_read_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="loading" />

        <TextView
            android:id="@+id/profile_friends_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="loading" />

        <TextView
            android:id="@+id/profile_friends_number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="loading" />

    </LinearLayout>

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#329e21"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cărți citite"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:id="@+id/finishedBooksText"
                android:textColor="#000000"/>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#329e21"
                        android:layout_marginTop="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileBooks"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#329e21"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:text="Cărți începute"
                android:id="@+id/readingBooksText"
                android:textColor="#000000"/>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#329e21"
                        android:layout_marginTop="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileReading" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#329e21"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:text="Persoane care te urmăresc"
                        android:id="@+id/FollowersText"
                        android:textColor="#000000"/>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#329e21"
                        android:layout_marginTop="5dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Followers" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#329e21"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="15dp"
                        android:text="Persoane pe care le urmărești"
                        android:id="@+id/FollowingText"
                        android:textColor="#000000"/>

                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#329e21"
                        android:layout_marginTop="5dp"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Following" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            app:fabSize="normal"
            android:src="@drawable/plusicon"
            android:id="@+id/fabMyProfile"/>

    </RelativeLayout>


</LinearLayout>
