<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toate recenziile"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/bfaooajid"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#329e21"
        android:id="@+id/shakira"
        android:layout_below="@id/bfaooajid"/>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaRecenzii"
        android:layout_below="@id/shakira"
        />

</RelativeLayout>